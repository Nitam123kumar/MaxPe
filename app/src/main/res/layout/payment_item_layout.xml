<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:id="@+id/payment_icon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/payment_icon"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/payment_icon"
            app:layout_constraintBottom_toBottomOf="@id/payment_icon"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

<!--        <RadioButton-->
<!--            android:id="@+id/radioBtn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:button="@null"-->
<!--            android:drawableEnd="@drawable/btn_radio"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="@id/payment_icon"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/payment_icon"-->
<!--            android:layout_marginEnd="@dimen/_15sdp"-->
<!--            />-->
        <RadioButton
            android:id="@+id/radioBtn"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:button="@null"
            android:background="@drawable/btn_radio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/payment_icon"
            app:layout_constraintBottom_toBottomOf="@id/payment_icon"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_money_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            app:layout_constraintTop_toBottomOf="@id/payment_icon"
            android:background="@drawable/add_money_btn_shape"
            android:text="@string/add"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_12sdp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@id/add_money_btn"
            android:background="#4DD9D9D9"
            android:layout_marginTop="@dimen/_15sdp"
                />



</androidx.constraintlayout.widget.ConstraintLayout>