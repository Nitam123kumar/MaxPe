<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rechargeLogo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/jio_logo"
        />
    
    <TextView
        android:id="@+id/rechargeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jio"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="12sp"
        android:textColor="#747474"
        app:layout_constraintStart_toEndOf="@id/rechargeLogo"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/recharge_mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Recharge Number"
        app:layout_constraintStart_toStartOf="@id/rechargeTitle"
        app:layout_constraintTop_toBottomOf="@id/rechargeTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    
    <TextView
        android:id="@+id/packPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pack Price"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        app:layout_constraintTop_toTopOf="@id/rechargeTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validity"
        android:textColor="#929292"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/packPrice"
        app:layout_constraintStart_toStartOf="@id/packPrice"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>