<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryB"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mpin_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@drawable/reffer_earn_svg"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mpin_imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/inter"
        android:textSize="@dimen/_13sdp"
        android:text="Set up your Pin"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="Setup Pin for additional account security.\nLoogin with just your secret Pin in\nseconds"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/dataSafe"/>

    <TextView
        android:id="@+id/dataSafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="Your Data is safe"
        android:drawableStart="@drawable/safe_icon"
        android:drawablePadding="@dimen/_5sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/set_pin_btn"
        app:layout_constraintTop_toBottomOf="@id/des"/>

    <TextView
        android:id="@+id/set_pin_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/img1"
        android:layout_marginBottom="@dimen/_2sdp"
        android:textColor="@color/colorPrimaryB"
        android:text="Set Pin"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_20sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>